<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:CoffeShopMAUI.ViewModels"
             xmlns:models="clr-namespace:CoffeShopMAUI.Models;assembly=CoffeShopMAUI.Core"
             x:Class="CoffeShopMAUI.Pages.HomePage"
             Title="Coffee House"
             Padding="15"
             x:DataType="vm:HomeViewModel">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="My Account"
                     Command="{Binding GoToAccountInfoCommand}"
                     Order="Secondary" />
        <ToolbarItem Text="History"
                     Command="{Binding GoToHistoryCommand}" />
        <ToolbarItem Text="Logout"
                     Order="Secondary"
                     Command="{Binding LogoutCommand}" />
    </ContentPage.ToolbarItems>
    <ScrollView>
        <VerticalStackLayout Spacing="10">
            <Border StrokeShape="RoundRectangle 10"
                    StrokeThickness="0"
                    BackgroundColor="Goldenrod"
                    VerticalOptions="Start"
                    Padding="15">
                <Grid ColumnDefinitions="*,150"
                      ColumnSpacing="15"
                      RowDefinitions="*,Auto">
                    <VerticalStackLayout Grid.Row="0"
                                         Grid.Column="0"
                                         Spacing="10">
                        <Label Text="Fresh Brews"
                               FontSize="25"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                        <Label Text="Grab this limited coffee offer before it expires" />
                    </VerticalStackLayout>
                    <Button Grid.Row="1"
                            Grid.Column="0"
                            Text="Order now"
                            BackgroundColor="PaleGoldenrod"
                            TextColor="Black"
                            FontAttributes="Bold"
                            CornerRadius="22"
                            HorizontalOptions="Start"
                            Margin="0,10,0,0"
                            Padding="40,10"
                            MinimumWidthRequest="170"
                            Command="{Binding GoToMenuPageCommand}" />
                    <Border Grid.RowSpan="2"
                           Grid.Column="1"
                           StrokeThickness="0"
                           BackgroundColor="#1AFFFFFF"
                           Padding="4"
                           HorizontalOptions="End"
                           VerticalOptions="Center"
                           StrokeShape="RoundRectangle 30"
                           Margin="0,0,0,5">
                        <Image Source="latte"
                               HeightRequest="130"
                               WidthRequest="130"
                                Aspect="AspectFit"
                                SemanticProperties.Description="Featured latte offer" />
                    </Border>
                </Grid>
            </Border>

            <Border StrokeShape="RoundRectangle 22"
                    StrokeThickness="2"
                    Stroke="Goldenrod">
                <Label Text="Search here..."
                       TextColor="Goldenrod"
                       Padding="10, 14" />
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToMenuFromSearchCommand}" />
                </Border.GestureRecognizers>
            </Border>

            <Border StrokeShape="RoundRectangle 20"
                    StrokeThickness="1"
                    Stroke="PaleGoldenrod"
                    Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Browse by category"
                           FontAttributes="Bold"
                           FontSize="18" />
                    <HorizontalStackLayout Spacing="8"
                                           HorizontalOptions="Center">
                        <Button Text="Hot drinks"
                                BackgroundColor="PaleGoldenrod"
                                TextColor="Black"
                                Command="{Binding GoToCategoryCommand}"
                                CommandParameter="Hot drinks" />
                        <Button Text="Food"
                                BackgroundColor="PaleGoldenrod"
                                TextColor="Black"
                                Command="{Binding GoToCategoryCommand}"
                                CommandParameter="Food" />
                        <Button Text="Cold drinks"
                                BackgroundColor="PaleGoldenrod"
                                TextColor="Black"
                                Command="{Binding GoToCategoryCommand}"
                                CommandParameter="Cold drinks" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <BoxView HeightRequest="15"
                     Color="Transparent" />

            <Grid ColumnDefinitions="*,*">
                <Label Grid.Column="0"
                       Text="Popular drinks &amp; food"
                       VerticalOptions="End"
                       FontSize="18"
                       FontAttributes="Bold" />
                <Label Grid.Column="1"
                       Text="View all"
                       HorizontalOptions="End"
                       VerticalOptions="End"
                       TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToAllItemsCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>

            <FlexLayout BindableLayout.ItemsSource="{Binding FeaturedDrinks}"
                        Wrap="Wrap">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="models:CoffeeDrink">
                        <Border FlexLayout.Basis="50%"
                                StrokeShape="RoundRectangle 10"
                                StrokeThickness="0"
                                BackgroundColor="PaleGoldenrod"
                                Padding="10"
                                Margin="2">
                            <Grid RowDefinitions="150,Auto,auto,Auto"
                                  RowSpacing="5">
                                <Border Grid.Row="0"
                                        HeightRequest="150"
                                        StrokeShape="RoundRectangle 20"
                                        BackgroundColor="White"
                                        StrokeThickness="0">
                                    <Image Source="{Binding Image}"
                                           Aspect="AspectFill"
                                           HeightRequest="150"
                                           WidthRequest="130" />
                                </Border>
                                <Label Grid.Row="1"
                                       Text="{Binding Name}"
                                       HorizontalOptions="Fill"
                                       HorizontalTextAlignment="Center"
                                       FontSize="20"
                                       LineBreakMode="WordWrap"
                                       MaxLines="2" />
                                <Grid Grid.Row="2"
                                      ColumnDefinitions="*,*">
                                    <Label Grid.Column="0"
                                           Text="{Binding Price, StringFormat='€{0:N2}'}"
                                           VerticalOptions="Center"
                                           FontAttributes="Bold" />
                                    <HorizontalStackLayout Grid.Column="1"
                                                           HorizontalOptions="End"
                                                           Spacing="2"
                                                           VerticalOptions="Center">
                                        <Label Text="4" />
                                        <Image Source="star"
                                               HeightRequest="15"
                                               WidthRequest="15">
                                            <Image.Behaviors>
                                                <toolkit:IconTintColorBehavior TintColor="DarkGoldenrod" />
                                            </Image.Behaviors>
                                        </Image>
                                    </HorizontalStackLayout>
                                </Grid>
                                <Button Grid.Row="3"
                                        Text="View more"
                                        BackgroundColor="Gold"
                                        TextColor="Black"
                                        CornerRadius="22"
                                        FontAttributes="Bold"
                                        VerticalOptions="End"
                                        HorizontalOptions="Center"
                                        Padding="25, 0"
                                        Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=GoToDrinkDetailsCommand}"
                                        CommandParameter="{Binding .}" />
                            </Grid>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=GoToDrinkDetailsCommand}"
                                                      CommandParameter="{Binding .}" />
                            </Border.GestureRecognizers>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
